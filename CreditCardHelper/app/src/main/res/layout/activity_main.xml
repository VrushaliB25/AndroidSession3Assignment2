<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#000"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="example.com.creditcardhelper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Enter Card Balance($)"
            android:id="@+id/cardbalance"
            android:layout_height="65dp"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="0.6"
            android:textSize="17sp"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="top"
            android:layout_weight="0.4"
            android:background="@drawable/styleforedittext"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Enter Yearly Interest Rate (%)"
            android:id="@+id/yearlyIR"
            android:layout_height="65dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/yearlyir"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:inputType="numberDecimal"
            android:background="@drawable/styleforedittext" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Enter Minimum Payment ($)"
            android:id="@+id/minpayment"
            android:layout_height="65dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:gravity="top"
            android:paddingTop="20dp"
            android:textSize="17sp"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/minpay"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:inputType="numberSigned"
            android:background="@drawable/styleforedittext"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Final Card Balance ($)"
            android:id="@+id/finalcb"
            android:layout_height="65dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:paddingBottom="15dp"
            android:gravity="bottom"
            android:textSize="17sp"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/editfinalcb"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:layout_weight="0.4"
            android:background="@drawable/styleforedittext"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Months Remaining"
            android:id="@+id/monthsr"
            android:layout_height="65dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:textSize="17sp"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_weight="0.4"
            android:background="@drawable/styleforedittext"
            android:inputType="numberDecimal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Interest Paid Will Be ($)"
            android:id="@+id/interestp"
            android:layout_height="65dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:paddingTop="20px"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/interp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_weight="0.4"
            android:background="@drawable/styleforedittext"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <Button
        android:text="COMPUTE"
        android:id="@+id/compute"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"/>
    <Button
        android:text="CLEAR"
        android:id="@+id/clear"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"/>

</LinearLayout>
